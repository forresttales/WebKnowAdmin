		function scrollToAnchor(aid) {
			var a = $("a[name='" + aid + "']");
			$('html, body').animate({ scrollTop: a.offset().top }, 1000);
			// jQuery('html, body').animate({scrollTop: 100}, 1000);				
		}
			
		function formValidate() {
						
			$("#form_publisher_journalposter_description").validate({
			
				//alert('form validator called');
				
				submitHandler: function(form) {
					form.submit();
				},
			
				debug: true,
				onkeyup: false,
				focusCleanup: true,
				focusInvalid: false,
				// invalidClass: "error",
				// validClass: "success",
				rules: {
					'publisher_journalposter_description[tag_line]': {
						required: true,
						minlength: 1,						
						maxlength: 100						
					},
					// 'publisher_journalposter_description[headline]': {
						// required: true,
						// minlength: 1,						
						// maxlength: 100						
					// },
					// 'publisher_journalposter_description[main_sales_phone]': {
						// required: false,
						// minlength: 1,						
						// maxlength: 100						
					// },
					'publisher_journalposter_description[url]': {
						required: true,
						minlength: 1,						
						maxlength: 100						
					},					
					'publisher_journalposter_description[word_descr]': {
						required: true,
						minlength: 1,						
						maxlength: 151						
					}					
				},
				invalidHandler: function(event, validator) {
					var errors = validator.numberOfInvalids();
					if (errors) {
						var message = errors == 1
						? '1 required field missed'
						: errors + ' required fields missed';
						$("#errors p").html(message);
						$("#errors").show();
						$("#submit_id").blur();
						$("#journal_table").focus();		
						scrollToAnchor('anchor1');										
					} else {
						$("div.errors").hide();
					}
				},			
				messages: {
					'publisher_journalposter_description[tag_line]': {
						required: "*",
						maxlength: "Exceeds 100 characters"							
					},
					// 'publisher_journalposter_description[headline]': {
						// required: "*",
						// maxlength: "Exceeds 100 characters"							
					// },
					// 'publisher_journalposter_description[main_sales_phone]': {
						// //required: "*",
						// maxlength: "Exceeds 100 characters"							
					// },
					'publisher_journalposter_description[url]': {
						required: "*",
						maxlength: "Exceeds 100 characters"							
					},
					'publisher_journalposter_description[word_descr]': {
						required: "*",
						maxlength: "Exceeds 151 characters"							
					}
				},
				errorContainer: $("div .error_label"),				
				errorPlacement: function(error, element) {
					error.insertAfter('#error_' + element.attr('id'));
					$('#' + element.attr('id')).removeClass('required').removeClass('success').addClass('error');
					//$('#label_' + element.attr('id')).removeClass('required-label').addClass('error-label');
				},
				// invalid: function(element) {
				// },
				// highlight: function(element) {
					// $('#' + element.attr('id')).removeClass('required').removeClass('success').addClass('error');
					// //$('#label_' + element.attr('id')).removeClass('required-label').addClass('error-label');
				// },
				// unhighlight: function(element) {
					// //$('#' + element.attr('id')).removeClass('required').removeClass('success').addClass('error');
					// //$('#label_' + element.attr('id')).removeClass('required-label').addClass('error-label');
				// },
				error: function(label) {
					$('#' + label.attr('for')).removeClass('required').removeClass('success').addClass('error');
					$('#label_' + label.attr('for')).removeClass('required-label').addClass('error-label');
					
				},
				success: function(label) {
					$('#' + label.attr('for')).removeClass('required').removeClass('error').addClass('success');
					$('#label_' + label.attr('for')).removeClass('error-label').addClass('required-label');
					
					$('#state_' + label.attr('for')).css ({			
						background: 'url("/assets/submit_form_tick.png") no-repeat 0px 5px'
					});

					$('#error_' + label.attr('for')).html("");
				},				
				focus: function(element) {
				}
			});

			// $.validator.setDefaults({
				// submitHandler: function() {
					// form.submit();
				// }
			// });
		}
			
			

