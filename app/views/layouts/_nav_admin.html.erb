    <script>
      
        (function($){  
            var nav = $("#topNav");  
            nav.find("li").each(function() {  
                if ($(this).find("ul").length > 0) {  
                    $(this).mouseenter(function() {  
                        $(this).find("ul").stop(true, true).slideDown(300);  
                    });  
                    $(this).mouseleave(function() {  
                        $(this).find("ul").stop(true, true).slideUp(300);  
                    });  
                }  
            });  
        })(jQuery);
          
